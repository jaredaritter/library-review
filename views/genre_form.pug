//- Passing in title, genre, genre_list, errors

extends layout

block content

  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(
        type='text' 
        placeholder='Fantasy, Poetry, etc.' 
        name='name' 
        value=(genre === undefined ? '' : genre.name)
        required='true'
      )
    button.btn.btn-primary(type='submit') Submit
  
  if errors
    ul.error
      for error in errors
        li!= error.msg
  
  .indent
    h4 Current Genres

    ul
      each genre in genre_list
        li #{genre.name}
  